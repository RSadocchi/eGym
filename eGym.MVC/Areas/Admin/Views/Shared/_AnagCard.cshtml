@model AnagDTO
@{
    Layout = null;
}
@if (Model != null)
{
    <div class="card card-dark component-card_4 h-100">
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="user-profile d-flex align-items-end">
                <img src="~/images/avatar/@(Model.Ang_Avatar)" onerror="this.onerror = null; this.src = '/images/placeholders/90x90.jpg';" class="" alt="...">
                <h3 class="card-user_name mb-0 pb-0 ml-2">@(Model.Ang_FirstName) @(Model.Ang_LastName)</h3>
            </div>
            <div class="user-info">
                <p class="card-user_occupation">
                    @foreach (var role in Model.Anag_MasterRoles)
                    {
                        <span class="badge badge-primary mr-2">@(role.EnumLabel)</span>
                    }
                </p>
                <p class="card-user_occupation">
                    @foreach (var role in Model.Anag_CorporateRoles)
                    {
                        <span class="badge badge-secondary mr-2">@(role.EnumLabel)</span>
                    }
                </p>
                <div class="card-star_rating">
                    <span class="badge badge-success">W 6</span>
                    <span class="badge badge-primary">nc 1</span>
                    <span class="badge badge-warning">L 2</span>
                </div>
            </div>
        </div>
    </div>
}
