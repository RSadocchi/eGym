@{
    Layout = "_AdminLayout";
}
<div class="col-xl-12 col-lg-12 col-md-12">

    <div class="mail-box-container">
        <div class="mail-overlay"></div>

        <div class="tab-title">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-12 text-center">
                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-clipboard.cshtml" />
                    <h5 class="app-title">Todo Listsss</h5>
                </div>

                <div class="todoList-sidebar-scroll">
                    <div class="col-md-12 col-sm-12 col-12 mt-4 pl-0">
                        <ul class="nav nav-pills d-block" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link list-actions active" id="all-list" data-toggle="pill" href="#pills-inbox" role="tab" aria-selected="true" data-statuses="@(string.Join(",", EN_TodoStatus.GetAll().Select(t => t.ID)))" data-important="false">
                                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-list.cshtml" />
                                    Inbox <span class="todo-badge badge"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link list-actions" id="todo-task-done" data-toggle="pill" href="#pills-sentmail" role="tab" aria-selected="false" data-statuses="@(EN_TodoStatus.Completed.ID)" data-important="false">
                                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-thumbs-up.cshtml" />
                                    Done <span class="todo-badge badge"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link list-actions" id="todo-task-important" data-toggle="pill" href="#pills-important" role="tab" aria-selected="false" data-statuses="@(string.Join(",", EN_TodoStatus.GetAll().Select(t => t.ID)))" data-important="true">
                                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-star.cshtml" />
                                    Important <span class="todo-badge badge"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link list-actions" id="todo-task-trash" data-toggle="pill" href="#pills-trash" role="tab" aria-selected="false" data-statuses="@(EN_TodoStatus.Deleted.ID)">
                                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-trash-2.cshtml" />
                                    Trash
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <a class="btn" id="addTask" href="#">
                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-plus.cshtml" />
                    New Task
                </a>
            </div>
        </div>

        <div id="todo-inbox" class="accordion todo-inbox">
            <div class="search">
                <input type="text" class="form-control input-search" id="searchString" placeholder="Search Here...">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu mail-menu d-lg-none">
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
            </div>

            <div class="todo-box" id="todo-list-container">
                <div id="ct" class="todo-box-scroll"></div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="todoShowListItem" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-body">
                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-x.cshtml" />
                    <div class="compose-box">
                        <div class="compose-content">
                            <h5 class="task-heading"></h5>
                            <p class="task-text"></p>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal">
                        <partial name="~/Areas/Admin/Views/Shared/svg/feather-trash.cshtml" />
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <modal-container id="addTaskModal" size="lg">
        <modal-body>
            <partial name="~/Areas/Admin/Views/Shared/svg/feather-x.cshtml" />
            <div class="compose-box">
                <div class="compose-content" id="addTaskModalTitle">
                    <h5 class="">Add Task</h5>
                    <form name="todo-save-form">
                        <input type="hidden" name="@(nameof(TodoDTO.TD_ID))" value="0" />
                        <input type="hidden" name="@(nameof(TodoDTO.TD_CreationDate))" value="@(DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"))" />
                        <input type="hidden" name="@(nameof(TodoDTO.TD_Deadline))" value="@((int)TodoDeadlineEnum.WhenIsPossible)" />
                        <input type="hidden" name="@(nameof(TodoDTO.TD_StatusID))" value="@(EN_TodoStatus.Scheduled.ID)" />
                        <div class="row">
                            <div class="col-md-12 d-flex flex-row justify-content-around align-items-center">
                                <div class="mb-4">
                                    <div class="n-chk d-flex flex-row justify-content-start align-items-center">
                                        <label class="switch s-icons s-outline s-outline-warning m-0">
                                            <input type="checkbox" name="@(nameof(TodoDTO.TD_Important))" value="true">
                                            <span class="slider round"></span>
                                        </label>
                                        <span class="new-chk-content">Important</span>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="n-chk">
                                        <label class="new-control new-radio new-radio-text radio-primary">
                                            <input type="radio" class="new-control-input" name="@(nameof(TodoDTO.TD_Priority))" value="@((int)TodoPriorityEnum.Low)">
                                            <span class="new-control-indicator"></span><span class="new-radio-content">Low priority</span>
                                        </label>
                                        <label class="new-control new-radio new-radio-text radio-warning">
                                            <input type="radio" class="new-control-input" name="@(nameof(TodoDTO.TD_Priority))" value="@((int)TodoPriorityEnum.Medium)">
                                            <span class="new-control-indicator"></span><span class="new-radio-content">Medium priority</span>
                                        </label>
                                        <label class="new-control new-radio new-radio-text radio-danger">
                                            <input type="radio" class="new-control-input" name="@(nameof(TodoDTO.TD_Priority))" value="@((int)TodoPriorityEnum.Hight)">
                                            <span class="new-control-indicator"></span><span class="new-radio-content">Hight priority</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="d-flex mail-to mb-4">
                                    <partial name="~/Areas/Admin/Views/Shared/svg/feather-edit-3.cshtml" />
                                    <div class="w-100">
                                        <input name="@(nameof(TodoDTO.TD_Title))" id="task" class="form-control" placeholder="Title*" required />
                                        <span class="validation-text"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex mail-subject mb-4">
                            <partial name="~/Areas/Admin/Views/Shared/svg/feather-file-text.cshtml" />
                            <div class="w-100">
                                @*<div id="taskdescription" class=""></div>*@
                                <textarea name="@(nameof(TodoDTO.TD_Content))" class="form-control" placeholder="Compose an epic..."></textarea>
                                <span class="validation-text"></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </modal-body>

        <modal-footer>
            <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> Discard</button>
            <button class="btn add-tsk" type="button" onclick="saveTodo(event)">Add Task</button>
            <button class="btn edit-tsk" type="button" onclick="saveTodo(event)">Save</button>
        </modal-footer>
    </modal-container>

</div>

<script>

    $(function () {
        loadTodo();
    });

    function loadTodo() {
        let statuses = '';
        let important = false;
        let searchString = $('#searchString').val();

        $('.nav-link.list-actions').each(function () {
            if ($(this).hasClass('active')) {
                statuses = $(this).attr('data-statuses');
                important = $(this).attr('data-important') == 'true';
            }
        });

        $.ajax({
            url: '/admin/dashboard/todo-list',
            method: 'post',
            data: { statuses: statuses, searchString: searchString, important: important },
            success: function (res) {
                $('#todo-list-container').html(res);
            },
            error: function (err) {
                console.error(err);
            }
        });
    }

